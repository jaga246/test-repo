<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <CheckBox
        android:id="@+id/checkboxAlignTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Align Top" />

    <CheckBox
        android:id="@+id/checkboxAlignBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Align Bottom" />

    <CheckBox
        android:id="@+id/checkboxAlignLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Align Left" />

    <CheckBox
        android:id="@+id/checkboxAlignRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Align Right" />

    <Button
        android:id="@+id/buttonApplyConstraints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apply" />
</LinearLayout>
